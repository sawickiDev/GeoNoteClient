<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="colorPrimary">@color/material_grey_400</item>
        <item name="colorPrimaryDark">@color/material_grey_600</item>
        <item name="colorAccent">@color/material_orange_a100</item>
        <item name="android:colorBackground">@color/material_grey_400</item>
    </style>

    <style name="MapTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorPrimary">@color/material_grey_400</item>
        <item name="colorPrimaryDark">@color/material_grey_600</item>
        <item name="colorAccent">@color/material_orange_a100</item>
        <item name="android:colorBackground">@color/material_grey_400</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="TextLimitExceeded" parent="TextAppearance.Design.Counter.Overflow">
        <item name="android:textColor">#d32f2f</item>
    </style>

    <style name="SettingsStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/material_grey_400</item>
        <item name="colorPrimaryDark">@color/material_grey_600</item>
        <item name="colorAccent">@color/material_orange_a100</item>
        <item name="android:colorBackground">@color/material_grey_400</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
